<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewListMovie"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/description_image_similar_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/textViewListMovieName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewListMovie"
        app:layout_constraintTop_toTopOf="@id/imageViewListMovie"
        tools:text="Edward Scissorhands"/>

    <TextView
        android:id="@+id/textViewListMovieReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textViewListMovieName"
        app:layout_constraintTop_toBottomOf="@id/textViewListMovieName"
        tools:text="1990"/>

    <TextView
        android:id="@+id/textViewListMovieGenres"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/textViewListMovieReleaseDate"
        app:layout_constraintTop_toBottomOf="@id/textViewListMovieName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Drama, Fantasy"/>

    <ToggleButton
        android:id="@+id/toggleButtonListMovieCheck"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@drawable/ic_check_circle_outline_24"
        android:background="@android:color/transparent"
        android:textOff=""
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>